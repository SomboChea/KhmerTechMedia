<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".other.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <WebView
        android:id="@+id/wbAds"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="WebViewLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </WebView>

    <ScrollView
        android:id="@+id/scrollViewD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wbAds">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="5dp"
            style="@style/CardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/top_lay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/top_selection_detail">
                    <ImageView
                        android:id="@+id/ivPhoto_detail"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@mipmap/logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cat_label_detail"
                        android:background="@drawable/label_bg"
                        android:textSize="10dp"
                        android:textAllCaps="true"
                        android:text="Technology"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="0dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_posted_detail"
                        android:text="@string/date_post"
                        android:layout_above="@+id/viewH"
                        android:background="@drawable/label_bg_1"
                        android:textColor="#fff"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/top_selection_detail"
                    android:id="@+id/txt_lay">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_full"
                            android:text="Title"
                            android:textSize="25sp"
                            android:padding="10dp"/>
                        <TextView
                            android:id="@+id/decs_full"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Decsription"
                            android:padding="10dp"
                            android:layout_below="@+id/title_full"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="5dp"
                    style="@style/CardView"
                    android:layout_below="@+id/top_lay"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    card_view:contentPadding="10dp">
                    <WebView
                        android:id="@+id/wbView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="WebViewLayout">
                    </WebView>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>